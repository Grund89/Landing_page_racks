                <input type="text" name="nome" placeholder="Seu Nome" required>
                <input type="tel" name="telefone" placeholder="Seu Telefone" required>
                <textarea name="mensagem" placeholder="Qual benefício você busca?" rows="4"></textarea>
                <button type="submit">Enviar</button>
            <% end %>
        </div>

        <!-- Rodapé -->
        <div class="section">
            <a href="https://wa.me/5511999999999" class="cta-button" target="_blank">Fale comigo agora!</a>
            <p>© 2025 Raquel Grund Wagner - Advogada Trabalhista</p>
        </div>
    </div>
</body>
</html>