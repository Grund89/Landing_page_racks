    <script>
        let slideIndex = 0;
        showSlides();

        function showSlides() {
            let slides = document.getElementsByClassName("testimonial-slide");
            let dots = document.getElementsByClassName("dot");
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            slideIndex++;
            if (slideIndex > slides.length) {slideIndex = 1}
            for (let i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            slides[slideIndex-1].style.display = "block";
            dots[slideIndex-1].className += " active";
            setTimeout(showSlides, 5000); // Troca a cada 5 segundos
        }

        function currentSlide(n) {
            slideIndex = n;
            showSlides();
        }

        // Pop-up para captação de leads
        window.onload = function() {
            setTimeout(function() {
                const popup = document.getElementById('popup');
                const overlay = document.getElementById('popup-overlay');
                if (popup && overlay) {
                    popup.style.display = 'block';
                    overlay.style.display = 'block';
                }
            }, 5000); // Aparece após 5 segundos
        };

        function closePopup() {
            document.getElementById('popup').style.display = 'none';
            document.getElementById('popup-overlay').style.display = 'none';
        }

        // Função para rolar suavemente até a seção
        function smoothScroll(target, duration) {
            const start = window.pageYOffset;
            const distance = target.getBoundingClientRect().top - 80; // Ajuste para o navbar fixo
            let startTime = null;

            function animation(currentTime) {
                if (startTime === null) startTime = currentTime;
                const timeElapsed = currentTime - startTime;
                const run = ease(timeElapsed, start, distance, duration);
                window.scrollTo(0, run);
                if (timeElapsed < duration) requestAnimationFrame(animation);
            }

            // Função de easing para movimento suave
            function ease(t, b, c, d) {
                t /= d / 2;
                if (t < 1) return c / 2 * t * t + b;
                t--;
                return -c / 2 * (t * (t - 2) - 1) + b;
            }

            requestAnimationFrame(animation);
        }

        // Adicionar evento de clique para o link "Depoimentos"
        document.addEventListener('DOMContentLoaded', () => {
            const depoimentosLink = document.querySelector('a[href="#depoimentos"]');
            if (depoimentosLink) {
                depoimentosLink.addEventListener('click', (e) => {
                    e.preventDefault();
                    const target = document.getElementById('depoimentos');
                    if (target) {
                        smoothScroll(target, 1000); // Rolagem suave por 1 segundo
                    }
                });
            }
        });
    </script>
